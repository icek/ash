{
  "name": "@ash.ts/ash",
  "license": "MIT",
  "version": "0.9.13",
  "description": "Typescript port of Ash - Entity Component System framework",
  "keywords": [
    "ash",
    "typescript",
    "framework",
    "game",
    "entity",
    "component",
    "system"
  ],
  "homepage": "https://icek.github.io/ash",
  "repository": {
    "type": "git",
    "url": "https://github.com/icek/ash"
  },
  "bugs": {
    "url": "https://github.com/icek/ash/issues"
  },
  "author": "Grzegorz Michlicki <grzegorz@michlicki.pl>",
  "contributors": [
    "Andres Alva <andresa88@gmail.com>"
  ],
  "main": "dist/ash.js",
  "browser": "dist/ash.min.js",
  "module": "dist/ash.mjs",
  "types": "dist/ash.d.ts",
  "typings": "dist/ash.d.ts",
  "files": [
    "dist/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm-run-all build:clean build:rollup",
    "build:clean": "rimraf dist",
    "build:rollup": "rollup -c",
    "dts": "npm-run-all dts:bundle dts:clean",
    "dts:bundle": "dts-bundle-generator -o dist/ash.d.ts --umd-module-name ash dist/types/index.d.ts",
    "dts:clean": "rimraf dist/types",
    "dist": "npm-run-all build dts",
    "docs": "npm-run-all docs:clean docs:typedoc",
    "docs:clean": "rimraf docs",
    "docs:typedoc": "typedoc --options typedoc.json ./src/index.ts",
    "lint": "npm-run-all lint:src lint:tests",
    "lint:src": "eslint ./src/**/*.ts",
    "lint:tests": "eslint ./tests/**/*.ts",
    "pretest": "jest --clearCache",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "test-changed": "jest -o",
    "test-watch-changed": "jest --watch",
    "pretest-coverage": "rimraf reports",
    "test-coverage": "jest --coverage",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "prepack": "rimraf ash-*.tgz"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "coveralls": "^3.0.4",
    "dts-bundle-generator": "^3.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.17.3",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.6",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "touch": "^3.1.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^ash$": "<rootDir>/src"
    }
  }
}
