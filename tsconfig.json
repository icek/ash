{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es6"],
    "pretty": true,
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "paths": {
      "@ash.ts/core": ["./core/src"],
      "@ash.ts/signals": ["./signals/src"],
      "@ash.ts/io": ["./io/src"],
      "@ash.ts/fsm": ["./fsm/src"],
      "@ash.ts/tick": ["./tick/src"],
      "@ash.ts/ash": ["./ash/src"],
      "@ash.ts/tools": ["./tools/src"],
      
    }
  },
  "typedocOptions": {
    "name": "ash",
    "mode": "modules",
    "module": "es6",
    "target": "es6",
    "out": "docs",
    "exclude": ["packages/**/tests/**/*", "packages/**/node_modules/**/*"],
    "theme": "default",
    "ignoreCompilerErrors": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "gitRevision": "master",
    "rewriteLinks": {
      "^\\.\\./([^/]+)(?:#readme|/README.md)": "modules/_ash_ts_$1.html"
    }
  }
}
