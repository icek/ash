{
  "compileOnSave": false,
  "compilerOptions": {

    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,

    "suppressImplicitAnyIndexErrors": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "./tests",
    "./src/ash/io",
    "./src/examples"
  ]
}
